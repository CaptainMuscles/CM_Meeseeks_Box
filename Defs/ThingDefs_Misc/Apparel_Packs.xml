<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="MeeseeksBox">
    <thingClass>ThingWithComps</thingClass>
    <defName>CM_Meeseeks_Box_Thing_Meeseeks_Box</defName>
    <label>meeseeks box</label>
    <description>A box that can create a helper capable of performing a single task to completion before disappearing.</description>
	<category>Item</category>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>True</useHitPoints>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <techLevel>Spacer</techLevel>
	<comps>
	  <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
	  <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CM_Meeseeks_Box.CompProperties_WornGizmos">
        <hotKey>Misc4</hotKey>
		<coolDownTicks>5000</coolDownTicks>
      </li>
	  <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Press button</useLabel>
      </li>
      <li Class="CM_Meeseeks_Box.CompProperties_UseEffectUseVerb">
		<verbClass>CM_Meeseeks_Box.Verb_SpawnMeeseeks</verbClass>
		<coolDownTicks>5000</coolDownTicks>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>CM_Meeseeks_Box.Verb_SpawnMeeseeks</verbClass>
        <label>CM_Meeseeks_Box_PressButton</label>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
      </li>
    </verbs>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMeeseeksBox</unfinishedThingDef>
      <researchPrerequisite>AdvancedFabrication</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <graphicData>
      <texPath>Things/Items/MeeseeksBox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <Mass>3</Mass>
      <Flammability>0.4</Flammability>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
	<thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
